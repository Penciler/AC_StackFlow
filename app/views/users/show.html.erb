<div class="container">

<div id="user_profile">
<h2><%= @user.name %></h2>
<em> <%= @user.title %> from <%= @user.company %></em>
    <div><%=@user.questions.count%> Questions </div>
    <div><%=@user.answers.count%> Answers</div>
    
    <% if @user_answer != nil %>
      <div>Answer with the most upvote: <%=@user_answer.upvotes_count%></div>
    <% else %>
      <div>Answer with the most upvote: 0</div>
    <%end%>

    <hr>
    
    <table class="table table-striped table-bordered">
      <tr>
        <th>E-mail</th> <td><%= @user.email  %></td>
      </tr>
      <tr>
        <th>Web Site</th> <td><%= @user.website %></td>
      </tr>
      <tr>
        <th>Twitter</th> <td><%=  @user.twitter %></td>
      </tr>
      <tr>
        <th>GitHub</th> <td><<%=  @user.github %>/td>
      </tr>
    
    </table>



  <% if current_user == @user %>
    <%= link_to "Back", :back, class: "btn btn-default" %>
    <%= link_to('Edit Profile', edit_user_path(current_user), class: "actions btn btn-primary") %>
    <%= link_to('Change Password', edit_user_registration_path, class: "actions btn btn-primary") %>
  <%end%>
  
</div>