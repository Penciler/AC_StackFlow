          <div class="col-sm-6 col-md-4">
            <div class="user-item">          
              <div>name: <%= question.user.name %></div>
              <%= link_to question.subject, question_path(question), class: "text-primary" %>&nbsp            
              <div><%= link_to "favorite: " + question.favorites.count.to_s , favorite_question_path(question), method: :post, class: "text-primary" %></div>
              <div>upvotes: <%= question.question_upvotes.count %></div>
              <div>ansers: <%= question.answers.count %></div>
              <%= simple_format question.content.truncate(100) %></li>
              <em><%= time_ago_in_words(question.created_at) + " ago - "   %> </em>
              <% if current_user == question.user %>
                  <div><%= link_to "[delete question]", question_path(question), method: :delete, class: "text-primary" %></div>
              <% end %>
              <hr>              
              <br>                
            </div>
          </div>



